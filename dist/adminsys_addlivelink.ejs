<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Live Link</title>
  <style>
        h1{
            font-family: 'Courier New', Courier, monospace;
        }
        body{
            background-color: #ddd;
        }
        td, th{
            border-left: 1px solid rgb(206, 206, 206);
            border-left: 1px solid rgb(206, 206, 206);
            border-bottom: 1px solid rgb(138, 138, 138);
            font-family: 'Courier New', Courier, monospace;
            padding: 15px;
            text-align: left;
        }
        th{
            font-weight: bold;
            background-color: rgb(208, 199, 171);
        }
        td:hover {
            background-color: rgb(247, 246, 242);
        }
        a:link, a:visited {
        background-color: rgb(154, 154, 154);;
         color: white;
         padding: 10px 20px;
         text-align: center;
         text-decoration: none;
         display: inline-block;
        }
        a:hover, a:active {
        background-color: rgb(180, 172, 148);;
        }
    </style>
</head>
<body>
    <form action="/admin/addlivelink/tiget1234" method="get">
        <input type="text" name="eventCode" placeholder="Event EventKeyName Here!">
        <input type="text" name="eventLink" onchange="checklink()" placeholder="Event Live Link Here">
        <input type="submit" value="Add link" id="sbutt" disabled>
    </form>
    <script>
        const checklink = () => {
            if (document.querySelector('input[name="eventLink"]').value.includes("https://" || "http://")) {
                console.log("Link is valid");
                document.querySelector("#sbutt").disabled = false;
            } else {
                alert("Link must be start with https:// or http:// ,Please enter valid link");
                document.querySelector("#sbutt").disabled = true;
            }
        }
    </script>
</body>
</html>