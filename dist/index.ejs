<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="shortcut icon" href="https://cdn.discordapp.com/attachments/1051360620630523904/1051406367375761428/logo.png" type="image/x-icon">

    <meta property="og:url"                content="https://tiget.bysamnorr.proj.iamickdev.com/" />
<meta property="og:type"               content="website" />
<meta property="og:title"              content="TIGET By SAMNORR" />
<meta property="og:description"        content="Making it easier and faster for everyone to book and buy ticket from the concert and event held buy your favorite artist. " />
<meta property="og:image"              content="https://cdn.discordapp.com/attachments/1051360620630523904/1051406367375761428/logo.png" />
  <title>Home | TIGET</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style type="text/tailwindcss">
    @tailwind base;
      @tailwind components;
      @tailwind utilities;
      @layer utility {
        .tigetbg {
          background-image: linear-gradient(black, black),
            url("./figmaAssets/cloud-bg.png");
          background-repeat: no-repeat;
          background-size: cover;
          background-blend-mode: saturation;
        }
        .tigetbginv {
          background-image: linear-gradient(black, black),
            url("./figmaAssets/cloud-bg-inv.png");
          background-repeat: no-repeat;
          background-size: cover;
          background-blend-mode: saturation;
        }
        .tigetbgfull {
          background-image: linear-gradient(black, black),
            url("./figmaAssets/cloud-bg-full.png");
          background-repeat: no-repeat;
          background-size: cover;
          background-blend-mode: saturation;
        }
      }
    </style>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            dmsans: ["DM Sans", "sans-serif"],
            roboto: ["Roboto", "sans-serif"],
          },
          colors: {
            clifford: "#da373d",
            tigetgold: "#c09e6b",
            tigetgold2: "#c09e6b",
          },
        },
      },
    };
  </script>
</head>

<body class="tigetbgfull">
  <!-- container -->
  <div class="container">
    <nav class="w-screen h-[100px] flex flex-row bg-zinc-900/75">
      <a href="/">
      <div class="flex flex-1 ml-16">
        
        <img src="./figmaAssets/logo.png" class="w-16 m-4" alt="" />
        <button class="btn-style-none text-tigetgold text-[37px] font-bold">
          IGET
        </button>
      </div>
    </a>
      <div class="grow">&nbsp;</div>
      <div class="items-center mr-16">
        <ul class="list-style-none text-left flex flex-row items-center mt-4">
          <li class="m-4 text-[white] text-[17px] font-semibold hover:text-tigetgold hover:font-bold ">
            <a href="/">Home</a>
          </li>
          <li class="m-4 text-tigetgold text-[17px] font-normal hover:text-[white] hover:font-semibold">
            <a href="/Events">Events</a>
          </li>
          <li class="m-4 text-tigetgold text-[17px] font-normal hover:text-[white] hover:font-semibold">
            <a href="/watchOnline">OnlineTicket</a>
          </li>
          <li class="m-4 text-tigetgold text-[17px] font-normal hover:text-[white] hover:font-semibold">
            <a href="/Ticket">Check Ticket</a>
          </li>
          <li class="m-4 text-tigetgold text-[17px] font-normal hover:text-[white] hover:font-semibold">
            <a href="/AboutUs">About Us</a>
          </li>
          <li class="m-4 text-tigetgold text-[17px] font-normal hover:text-[white] hover:font-semibold">
            &nbsp;
          </li>
        </ul>
      </div>
    </nav>

    <div class="pb-64 flex flex-col w-screen justify-center items-center">
      <h1 class="text-[183.883px] font-bold text-tigetgold2 m-9 p-40 pb-0 align-center">
        TIGET
      </h1>
      <!-- Don't forget to add form action and submit -->

      <!-- search bar  -->
      <form action="/Events/search">
        <div class="flex border-tigetgold border-4 rounded-full w-[725px] h-16 hover:border-8  mb-10">
            <input class="bg-transparent p-8 text-xl text-tigetgold text-bold w-[725px]  h-16 border-none placeholder-tigetgold focus:outline-none focus:border-transparent"
            type="search" name="searchEvent" id="searchEvent" placeholder="Search your event here!" required/>

            <button type="submit">
            <div class="grid place-items-center h-full w-12 text-tigetgold mr-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            </div>
        </button>
        </div>
      </form>
    <!-- end of search bar -->
    
      <p class="text-[36px] mb-[20px] text-tigetgold">
        A website for buying event and concert tickets
      </p>
      <p class="w-[894px] text-[23px] text-[white] p-4 text-center">
        Making it easier and faster for everyone to book and buy ticket from
        the concert and event held buy your favorite artist.
      </p>
      <div class="mb-96">&nbsp;</div>

      <!-- Event zone -->

      
      <!-- start of you may like -->
      <div class="flex flex-col ml-32 mr-32">
        <p class="text-3xl font-semibold text-tigetgold">You may like</p>
        <div class="flex flex-wrap">
          <!-- events card -->
          <% for( let i = 0; i < 3; i++ ) { %>
          
          
        <a href="<%= eventData[i].EventStatus == 'active' ? '/Events/'+eventData[i].EventKeyName : 'javascript:alert("This event not available now!")' %> ">
          <div
            class="w-[475px] h-[274px] <%= eventData[i].EventStatus == 'active' ? '' : 'filter grayscale' %>  flex flex-row rounded overflow-hidden shadow-lg bg-gray-600/50 rounded-full m-6">
            <img class="w-[255px]" src="<%= eventData[i].EventPoster %> " alt="Sunset in the mountains" />
            <div class="px-6 py-4">
              <div class="font-bold text-md mb-2 text-tigetgold">
                <p><%= eventData[i].EventTitle %> </p>
              </div>
              <p class="text-white text-sm pt-2 pb-2 font-normal">
                &nbsp; <%= eventData[i].EventDate%> 
              </p>
              <span class="flex flex-row pt-2 pb-2"><img src="./figmaAssets/marker.png" alt="" />
                <p class="text-white font-semibold"><%= eventData[i].EventLocation %> </p>
              </span>
              <p class="text-[10px] text-tigetgold">
                <%= eventData[i].EventDesc %> 
                </p>
              <p class="text-white font-bold mt-2 text-[15px]">
                <% let rawKeyWord = eventData[i].EventTag;  %>
                    <% const keyWord = rawKeyWord.split(", "); %>
                    <%= keyWord[0]+"" %> <%= keyWord[1]+"" %> <%= keyWord[2]+"" %> 
              </p>
            </div>
          </div>
          </a>
          <% } %>
          <!-- .toISOString().split('T')[0].replace(/-/g,' ')  -->
          <!-- events card -->
        </div>
      </div>
      <!-- end of you may like -->



      <!-- start of all event -->
      <div class="flex flex-col ml-32 mt-32 mr-32">
        <p class="text-3xl font-semibold text-tigetgold">All Events</p>
        <div class="flex flex-wrap">
          <!-- events card -->
          <% for( let i = 0; i < 3; i++ ) { %>
          
          
            <a href="/Events/<%= eventData[i].EventStatus == 'active' ? eventData[i].EventKeyName : '#' %> ">
            <div
              class="w-[475px] h-[274px] <%= eventData[i].EventStatus == 'active' ? '' : 'filter grayscale' %>  flex flex-row rounded overflow-hidden shadow-lg bg-gray-600/50 rounded-full m-6">
              <img class="w-[255px]" src="<%= eventData[i].EventPoster %> " alt="Sunset in the mountains" />
              <div class="px-6 py-4">
                <div class="font-bold text-md mb-2 text-tigetgold">
                  <p><%= eventData[i].EventTitle %> </p>
                </div>
                <p class="text-white text-sm pt-2 pb-2 font-normal">
                  &nbsp; <%= eventData[i].EventDate%> 
                </p>
                <span class="flex flex-row pt-2 pb-2"><img src="./figmaAssets/marker.png" alt="" />
                  <p class="text-white font-semibold"><%= eventData[i].EventLocation %> </p>
                </span>
                <p class="text-[10px] text-tigetgold">
                  <%= eventData[i].EventDesc %> 
                  </p>

                <p class="text-white font-bold text-[15px] mt-2">
                  <% let rawKeyWord = eventData[i].EventTag;  %>
                      <% const keyWord = rawKeyWord.split(", "); %>
                      <%= keyWord[0]+"" %> <%= keyWord[1]+"" %> <%= keyWord[2]+"" %> 
                </p>
              </div>
            </div>
            </a>
            <% } %>

          <!-- events card -->
        </div>
      </div>
      <!-- end of all event -->
      <div class="flex flex-row w-full">
        <div class="grow">&nbsp;</div>
        <a href="/Events" class="flex-none text-white mr-40 mt-12 font-[20px]">See more ...</a>
      </div>
    </div>
    <!-- end of content -->

    <footer class="w-screen h-[216px] bg-gradient-to-t from-black to-[#131313] flex flex-col justify-center items-center">
      <h2 class="text-tigetgold italic font-semibold font-[30px]">SAMNORR</h2>
      <p class="text-white">126 Pracha Uthit Rd., Bang Mod, Thung Khru, Bangkok 10140, Thailand</p>
      <p class="text-white underline underline-offset-2">+(66) 8 348 1406 | <a href="mailto:hellotiget@hotmail.com">hellotiget@hotmail.com</a></p>
      <p class="text-tigetgold mt-4">&copy; 2022 Copyright : TIGET</p>
    </footer>
  </div>
</body>

</html>